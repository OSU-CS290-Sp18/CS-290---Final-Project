<button id="create-button" type="button" id="create-button"><i class="far fa-comment"></i></button>

<div id="modal-backdrop" class="hidden"></div>
  <div id="leave-comment-modal" class="hidden">
    <div class="modal-pop-up">

      <div class="modal-header">
        <h3>Leave a Comment</h3>
        <button type="button" class="modal-close-button">&times;</button>
      </div>

      <div class="modal-body">
        <div class="comment-input-element">
          <label for="comment-author-input">Author</label>
          <input type="text" id="comment-author-input">
        </div>

        <div class="comment-input-element">
          <label for="comment-input">Comment</label>
          <textarea id="comment-input"></textarea>
        </div>

      <div class="modal-footer">
        <button type="button" class="modal-cancel-button">Cancel</button>
        <button type="button" class="modal-accept-button">Submit Comment</button>
      </div>

    </div>
  </div>
</div>
